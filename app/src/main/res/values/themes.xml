<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BluetoothSensor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/def_bg</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.MaterialComponents.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/sm_radius</item>
        <!--        <item name="backgroundTint">@color/colorPrimary</item>-->
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/defaultDimen</item>
        <item name="android:paddingBottom">@dimen/defaultDimen</item>
        <item name="android:paddingStart">@dimen/defaultDimen</item>
        <item name="android:paddingEnd">@dimen/defaultDimen</item>
        <item name="android:padding">@dimen/defaultDimen</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="contentPadding">@dimen/defaultDimen</item>
        <item name="rippleColor">@color/lightGrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TextBold</item>
        <item name="backgroundTint">@color/button_color</item>
    </style>

    <style name="ConvexityButton" parent="Widget.MaterialComponents.Button.Primary">
        <item name="cornerRadius">4dp</item>
        <!--        <item name="backgroundTint">@color/colorPrimary</item>-->
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/lightGrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">19dp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TextMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/button_color</item>
    </style>

    <style name="ConvexityButtonOutlined" parent="Widget.MaterialComponents.Button.Outline">
        <item name="cornerRadius">4dp</item>
        <!--        <item name="backgroundTint">@color/colorPrimary</item>-->
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/lightGrey</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">19dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TextBold</item>
        <item name="backgroundTint">@color/button_color_outlined</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Outline" parent="Widget.MaterialComponents.Button">
        <item name="strokeWidth">1dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/sm_radius</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="rippleColor">@color/lightGrey</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
    </style>

    <style name="TextAppearance.TextRegular" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="TextAppearance.TextBold" parent="TextAppearance.TextRegular">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="TextAppearance.TextSemiBold" parent="TextAppearance.TextRegular">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textColor">@color/semiblack</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="lineSpacing">5sp</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/gilroy_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/semiblack</item>
    </style>

    <style name="TextAppearance.Header" parent="TextAppearance.TextRegular">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/semiblack</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextAppearance.TextMedium" parent="TextAppearance.TextRegular">
        <item name="android:fontFamily">@font/gilroy_medium</item>

    </style>

    <style name="TextInputLayout.FormEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/sm_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/sm_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/sm_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/sm_radius</item>
        <item name="android:insetTop">0dp</item>
        <item name="indicatorInset">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/lightGrey</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="boxStrokeColor">@color/edit_color</item>
        <item name="startIconTint">@color/edit_color</item>
        <item name="editTextStyle">@style/TextInputEditText.Padding</item>
    </style>

    <style name="TextInputLayout.FormEditText.DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/sm_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/sm_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/sm_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/sm_radius</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/lightGrey</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="boxStrokeColor">@color/edit_color</item>
        <item name="startIconTint">@color/edit_color</item>
    </style>


    <style name="TextInputEditText.Padding" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorTertiary</item>
    </style>

    <style name="ImageButton.Default" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:padding">8dp</item>
        <item name="android:tint">@null</item>
    </style>

    <style name="CustomBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>



    <style name="CustomBottomSheetStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerSize">15%</item>
    </style>

    <style name="ConvexityOnlyTopRounded" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
        <item name="cornerSizeTopLeft">8%</item>
        <item name="cornerSizeTopRight">8%</item>
        <item name="cornerSizeBottomLeft">0%</item>
        <item name="cornerSizeBottomRight">0%</item>
    </style>

    <dimen name="sm_radius">8dp</dimen>
    <dimen name="lg_radius">24dp</dimen>

    <style name="RoundImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>