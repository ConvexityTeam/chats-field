<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BluetoothSensor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.MaterialComponents.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/sm_radius</item>
        <!--        <item name="backgroundTint">@color/colorPrimary</item>-->
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/lightGrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TextBold</item>
        <item name="backgroundTint">@color/button_color</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Outline" parent="Widget.MaterialComponents.Button">
        <item name="strokeWidth">1dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/sm_radius</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="rippleColor">@color/lightGrey</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
    </style>

    <style name="TextAppearance.TextRegular" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="TextAppearance.TextBold" parent="TextAppearance.TextRegular">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="TextAppearance.TextSemiBold" parent="TextAppearance.TextRegular">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textColor">@color/semiblack</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="lineSpacing">5sp</item>
    </style>

    <style name="TextAppearance.TextMedium" parent="TextAppearance.TextRegular">
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="TextInputLayout.FormEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/sm_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/sm_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/sm_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/sm_radius</item>
        <item name="android:insetTop">0dp</item>
        <item name="indicatorInset">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/lightGrey</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="boxStrokeColor">@color/edit_color</item>
        <item name="startIconTint">@color/edit_color</item>
        <item name="editTextStyle">@style/TextInputEditText.Padding</item>
    </style>

    <style name="TextInputLayout.FormEditText.DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/sm_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/sm_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/sm_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/sm_radius</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/lightGrey</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="boxStrokeColor">@color/edit_color</item>
        <item name="startIconTint">@color/edit_color</item>
    </style>


    <style name="TextInputEditText.Padding" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorTertiary</item>
    </style>

    <style name="ImageButton.Default" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:padding">8dp</item>
        <item name="android:tint">@null</item>
    </style>

    <style name="CustomBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>



    <style name="CustomBottomSheetStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <dimen name="sm_radius">8dp</dimen>
    <dimen name="lg_radius">24dp</dimen>

    <style name="RoundImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>